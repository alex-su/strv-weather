<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="actionBarStyle">@style/AppTheme.ActionBar</item>
        <item name="actionOverflowButtonStyle">@style/AppTheme.ActionBar.Overflow</item>
        <item name="homeAsUpIndicator">@drawable/ic_action_back</item>
    </style>

    <style name="AppTheme.ActionBar" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="background">@color/bg_action_bar</item>
        <item name="titleTextStyle">@style/AppTheme.ActionBar.Title</item>
        <item name="icon">@drawable/action_bar_icon</item>
        <item name="displayOptions">homeAsUp|showHome|showTitle</item>
    </style>

    <style name="AppTheme.ActionBar.Title" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size_action_bar_title</item>
    </style>

    <style name="AppTheme.ActionBar.Overflow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_action_overflow</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="InformationText">
        <item name="android:textColor">@color/text_dark_grey</item>
        <item name="android:textSize">@dimen/text_size_today_information</item>
    </style>

</resources>
